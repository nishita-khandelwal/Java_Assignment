package dayeight;
import java.awt.Color;
import java.awt.Frame;
import java.awt.Graphics;
import java.awt.HeadlessException;

class MovingCircle extends Frame implements Runnable
{
	private int xr,xg,xb;
	private Thread t1,t2,t3;
	public MovingCircle() throws HeadlessException {
		super();
		xr=xg=xb=100;
		t1=new Thread(this,"RED");
		t2=new Thread(this,"GREEN");
		t3=new Thread(this,"BLUE");
		t1.start();
		t2.start();
		t3.start();
	}

	public void paint(Graphics g) {
		g.setColor(Color.RED);
		g.fillOval(xr, 100, 50, 50);
		g.setColor(Color.GREEN);
		g.fillOval(xg, 200, 50, 50);
		g.setColor(Color.BLUE);
		g.fillOval(xb, 3000, 50, 50);
	}

	@Override
	public void run() {
		// TODO Auto-generated method stub
		while (true) {
			if(Thread.currentThread()==t1)
			{
				synchronized (this) {
				xr++;
				if(xr==this.getWidth()-50)
				{
					
					try {
						wait();
					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
				}
				}
				try {
					Thread.sleep(20);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			else if (Thread.currentThread()==t2) 
			{
				xg++;
				synchronized (this) {
				if(xg==this.getWidth()-50)
				{
					
					try {
						wait();
					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
				}}
				try {
					Thread.sleep(40);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			else if (Thread.currentThread()==t3) 
			{
				xb++;
				synchronized (this) {
				if(xb==this.getWidth()-50)
				{
					
					
							notifyAll();
							xr=xb=xg=50;
					
					
				}}
				try {
					Thread.sleep(50);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			repaint();
		}
		
	}
}

public class Test {
	public static void main(String[] args) {
		MovingCircle movingCircle=new MovingCircle();
		movingCircle.setSize(400, 400);
		movingCircle.setVisible(true);
		System.out.println("Test");
	}
}
