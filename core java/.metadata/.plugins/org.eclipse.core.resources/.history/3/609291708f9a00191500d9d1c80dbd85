import java.util.Scanner;

class Employee {
	private int empid;
	private String name;
	private double salary;
	private static int cnt;
	
	
	//instance block
	{
		System.out.println("Instance block");
		empid=101;
		name="Akshay";
		salary=125465;
		
	}
	static 
	{
		System.out.println("Static block");
	}
	
	public Employee() {
		System.out.println("Constructor");
		empid=101;
		name="Akshay";
		salary=125465;
		cnt++;
		
	}
	
	public Employee(int empid, String name, double salary) {
		super();
		this.empid = empid;
		this.name = name;
		this.salary = salary;
	}

	public void accept()
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the details");
		empid=sc.nextInt();
		name=sc.next();
		salary=sc.nextDouble();
	}
	public void display()
	{
		System.out.println("Empid is:-"+empid+" Name is:-"+name+" and Salary is"+salary);
	}
	public String toString()
	{
		return empid+" "+name+" "+salary;
	}

	public int getEmpid() {
		return empid;
	}

	public void setEmpid(int empid) {
		this.empid = empid;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getSalary() {
		return salary;
	}

	public void setSalary(double salary) {
		this.salary = salary;
	}
	public static void showCut()
	{
		System.out.println("Number of objects are"+cnt);
	}
}
public class Test {
	public static void main(String args[])
	{
		
	    Employee e1=new Employee();
	    Employee e3=new Employee();
	    Employee e2=new Employee(102,"Baccha",10220);
	    System.out.println(e2.toString()); //it is basically genrating hash code
	    Employee.showCut();
	   // e1.display();
	    //e2.display();
	   /* e3.setName("RAhul");
	    e3.setEmpid(103);
	    e3.setSalary(45564);
	    System.out.println(e3.getEmpid());
	    System.out.println(e3.getName());
	    System.out.println(e3.getSalary());*/
	}
}
